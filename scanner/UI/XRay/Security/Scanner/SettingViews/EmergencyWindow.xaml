<Window x:Class="UI.XRay.Security.Scanner.SettingViews.EmergencyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:framework="clr-namespace:UI.XRay.Gui.Framework;assembly=UI.XRay.Gui.Framework"
        Height="160" Width="450" ResizeMode="NoResize" WindowStyle="none" Top="0" Left="0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*" ></ColumnDefinition>
            <ColumnDefinition Width="133*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="../Icons/Error.png"  Margin="20,20,20,20"></Image>
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="{framework:LanguageResource  ViewSection=Common, Source=Emergency window}" FontSize="25" HorizontalAlignment="Center" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
