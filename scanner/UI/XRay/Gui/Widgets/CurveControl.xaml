<UserControl x:Class="UI.XRay.Gui.Widgets.CurveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:charting="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
             mc:Ignorable="d" IsTabStop="False"
             d:DesignHeight="300" d:DesignWidth="300">
        <WindowsFormsHost Name="ChartHost">
            <charting:Chart x:Name="CurveChart" BackColor="Black" />
        </WindowsFormsHost>
</UserControl>
